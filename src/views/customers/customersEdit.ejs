<div class="container mt-4">
    <h1 class="mt-4">Người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active"><a href="/">Trang chủ</a>/<a href="/customers">Tài khoản người
                dùng</a>/<%= user._id %></li>
    </ol>

    <div class="card mt-4">

        <div class="container emp-profile">
            <div class="row d-flex justify-content-center">
                <div class="col-md-4">
                    <div class="profile-img">
                        <% if(user.avatar_image_url) { %>
                        <img src="<%= user.avatar_image_url %>" alt="">
                        <% } else { %>
                        <img src="/resources/img/user-img-default.png" alt="" />
                        <% } %>
                    </div>
                </div>
                <div class="col-md-4 mt-4">
                    <div class="profile-head">
                        <h5>
                            <%= user.first_name + ' ' + user.last_name %>
                        </h5>
                        <h6>
                            <%= user.email %>
                        </h6>
                        <form action="/customers/id/<%= user._id %>/change-blocked-status" method="POST">
                            <input type="text" name="user_id" value="<%= user._id%>" hidden>
                            <input type="text" name="isBlocked" value="<%= !user.isBlocked%>" hidden>
                            <input type="text" name="_method" value="patch" hidden>
                            <% if(user.isBlocked) { %>
                            <button type="submit" class="btn btn-outline-info mt-4"><i class="fas fa-unlock-alt"></i>
                                &ensp;Unblock</button>
                            <% } else { %>
                            <button type="submit" class="btn btn-outline-danger mt-4"><i class="fa fa-ban"
                                    aria-hidden="true"></i> &ensp;Block</button>
                            <% } %>
                        </form>
                    </div>

                </div>

            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="profile-head">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                    aria-controls="home" aria-selected="true">Thông tin chi tiết</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-12 d-flex justify-content-center">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th scope="row">User ID</th>
                                <td><%= user._id %></td>
                            </tr>
                            <tr>
                                <th scope="row">Họ</th>
                                <td><%= user.first_name %></td>
                            </tr>
                            <tr>
                                <th scope="row">Tên</th>
                                <td><%= user.last_name %> </td>
                            </tr>
                            <tr>
                                <th scope="row">Email</th>
                                <td><%= user.email %></td>
                            </tr>
                            <tr>
                                <th scope="row">SĐT</th>
                                <td><%= user.phone_number %></td>
                            </tr>
                            <tr>
                                <th scope="row">Xác nhận qua email</th>
                                <% if(user.active) {%>
                                <td><%= 'Đã xác nhận' %> </td>
                                <% } else { %>
                                <td><%= 'Chưa xác nhận' %> </td>
                                <% } %>
                            </tr>
                            <tr>
                                <th scope="row">Trạng thái tài khoản</th>
                                <% if(!user.isBlocked) {%>
                                <td><%= 'Bình thường' %> </td>
                                <% } else { %>
                                <td><%= 'Đã bị khoá' %> </td>
                                <% } %>
                            </tr>
                            <tr>
                                <th scope="row">Địa chỉ</th>
                                <td><%= user.address %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>